<Window
    x:Class="Cinema.FilterWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Cinema"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="FilterWindow"
    Width="800"
    Height="600"
    AllowsTransparency="False"
    ResizeMode="NoResize"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid>
        <Grid x:Name="Head" Style="{StaticResource WindowHead_style}">
            <!--  Располагает объекты внутри себя друг под другом  -->
            <StackPanel x:Name="usersActions">
                <Rectangle
                    x:Name="HandlerRectangle"
                    MouseDown="DragWindow"
                    Style="{StaticResource HandlerRect_style}" />
                <Border x:Name="Logo" Style="{StaticResource logosPlaceBorder_style}">
                    <Image
                        Width="130"
                        Height="130"
                        Source="Images/cinemaLogo.png" />
                </Border>
                <TextBlock
                    x:Name="CinemaCompanyName"
                    Style="{StaticResource TitleText_style}"
                    Text="Cinematik" />
                <Button
                    x:Name="userRegistrationButton"
                    Click="goRegistrationWindow"
                    Content="Регистрация"
                    Style="{StaticResource HeadButtons_style}" />
                <Button
                    x:Name="userAuthorizationButton"
                    Click="goAuthorizationWindow"
                    Content="Аккаунт"
                    Style="{StaticResource HeadButtons_style}" />
            </StackPanel>
            <StackPanel VerticalAlignment="Bottom">
                <Button
                    x:Name="GoBackToMainWindow"
                    Click="goBack"
                    Content="Вернуться"
                    Style="{StaticResource HeadButtons_style}" />
                <Button
                    x:Name="closeApplication"
                    Click="closeApp"
                    Content="Закрыть"
                    Style="{StaticResource CloseAppButtons_style}" />
            </StackPanel>


        </Grid>
        <Grid x:Name="Body" Style="{StaticResource WindowBody_style}">
            <StackPanel>
                <!--  Возраст  -->
                <Border x:Name="AgeFilter" Style="{StaticResource filterPlaceSettings_style}">
                    <Grid>
                        <TextBlock Style="{StaticResource Text_style}" Text="Возрастное ограничение" />
                        <Button
                            Click="ClearAge"
                            Content="Сбросить"
                            Style="{StaticResource FilterClearButton_style}" />

                        <StackPanel Margin="0,20,0,0" Orientation="Horizontal">
                            <Border
                                x:Name="_6"
                                MouseDown="ChooseAge"
                                Style="{StaticResource FilterPoint_style}">
                                <TextBlock Style="{StaticResource FilterhintText_style}" Text="6+" />
                            </Border>
                            <Border
                                x:Name="_10"
                                MouseDown="ChooseAge"
                                Style="{StaticResource FilterPoint_style}">
                                <TextBlock Style="{StaticResource FilterhintText_style}" Text="10+" />
                            </Border>
                            <Border
                                x:Name="_16"
                                MouseDown="ChooseAge"
                                Style="{StaticResource FilterPoint_style}">
                                <TextBlock Style="{StaticResource FilterhintText_style}" Text="16+" />
                            </Border>
                            <Border
                                x:Name="_18"
                                MouseDown="ChooseAge"
                                Style="{StaticResource FilterPoint_style}">
                                <TextBlock Style="{StaticResource FilterhintText_style}" Text="от 18" />
                            </Border>
                        </StackPanel>
                    </Grid>


                </Border>
                <!--  Жанр  -->
                <Border x:Name="TypeFilter" Style="{StaticResource filterPlaceSettings_style}">
                    <Grid>
                        <TextBlock Style="{StaticResource Text_style}" Text="Жанр фильма" />
                        <Button
                            Click="ClearType"
                            Content="Сбросить"
                            Style="{StaticResource FilterClearButton_style}" />

                        <StackPanel Margin="0,20,0,0" Orientation="Horizontal">
                            <Border
                                x:Name="Комедия"
                                MouseDown="ChooseType"
                                Style="{StaticResource FilterPoint_style}">
                                <TextBlock Style="{StaticResource FilterhintText_style}" Text="Комедия" />
                            </Border>
                            <Border
                                x:Name="Хоррор"
                                MouseDown="ChooseType"
                                Style="{StaticResource FilterPoint_style}">
                                <TextBlock Style="{StaticResource FilterhintText_style}" Text="Хоррор" />
                            </Border>
                            <Border
                                x:Name="Любовь"
                                MouseDown="ChooseType"
                                Style="{StaticResource FilterPoint_style}">
                                <TextBlock Style="{StaticResource FilterhintText_style}" Text="Любовь" />
                            </Border>
                            <Border
                                x:Name="Экшен"
                                MouseDown="ChooseType"
                                Style="{StaticResource FilterPoint_style}">
                                <TextBlock Style="{StaticResource FilterhintText_style}" Text="Экшен" />
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>
                <!--  Страна  -->
                <Border x:Name="CountryFilter" Style="{StaticResource filterPlaceSettings_style}">
                    <Grid>
                        <TextBlock Style="{StaticResource Text_style}" Text="Страна производитель" />
                        <Button
                            Click="ClearCountry"
                            Content="Сбросить"
                            Style="{StaticResource FilterClearButton_style}" />
                        <StackPanel Margin="0,20,0,0" Orientation="Horizontal">
                            <Border
                                x:Name="Россия"
                                MouseDown="ChooseCountry"
                                Style="{StaticResource FilterPoint_style}">
                                <TextBlock Style="{StaticResource FilterhintText_style}" Text="Россия" />
                            </Border>
                            <Border
                                x:Name="США"
                                MouseDown="ChooseCountry"
                                Style="{StaticResource FilterPoint_style}">
                                <TextBlock Style="{StaticResource FilterhintText_style}" Text="США" />
                            </Border>
                            <Border
                                x:Name="Турция"
                                MouseDown="ChooseCountry"
                                Style="{StaticResource FilterPoint_style}">
                                <TextBlock Style="{StaticResource FilterhintText_style}" Text="Турция" />
                            </Border>
                            <Border
                                x:Name="Франция"
                                MouseDown="ChooseCountry"
                                Style="{StaticResource FilterPoint_style}">
                                <TextBlock Style="{StaticResource FilterhintText_style}" Text="Франция" />
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>
                <!--  Кнопка принять фильтр  -->
                <Button
                    Click="AcceptFilter"
                    Content="Принять"
                    Style="{StaticResource FilterAcceptButton_style}" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
